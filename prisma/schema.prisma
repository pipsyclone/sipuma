generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  userid   String @id @default(cuid())
  username String @unique
  email    String @unique
  nophone  String @unique
  password String
  name     String
  role     String @default("BUSINESS_OWNER")

  UMKM      UMKM[]
  Categorys Categorys[]
  Events    Events[]

  @@map("users")
}

model UMKM {
  umkmid           String   @id @default(cuid())
  userid           String   @unique
  categoryid       String
  owner_name       String
  bussines_name    String
  bussines_foto    String   @db.Text
  bussines_desc    String   @db.Text
  bussines_address String   @db.Text
  bussines_status  String   @default("WAIT_VERIFIED")
  createdAt        DateTime @default(now())

  user     Users     @relation(fields: [userid], references: [userid], onDelete: Cascade)
  category Categorys @relation(fields: [categoryid], references: [categoryid])

  @@map("umkm")
}

model Categorys {
  categoryid    String @id @default(cuid())
  userid        String
  category_name String

  user Users  @relation(fields: [userid], references: [userid])
  UMKM UMKM[]

  @@map("categorys")
}

model Events {
  eventid    String   @id @default(cuid())
  userid     String
  event_name String
  event_foto String
  event_date DateTime
  event_desc String   @db.Text

  user Users @relation(fields: [userid], references: [userid], onDelete: Cascade)

  @@map("events")
}
