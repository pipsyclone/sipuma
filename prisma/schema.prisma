generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  userid   String @id @default(cuid())
  username String @unique
  email    String @unique
  nophone  String @unique
  password String
  name     String
  role     String @default("BUSINESS_OWNER")

  UMKM UMKM[]

  @@map("users")
}

model UMKM {
  umkmid           String   @id @default(cuid())
  userid           String   @unique
  owner_name       String
  bussines_name    String
  bussines_foto    String   @db.Text
  bussines_desc    String   @db.Text
  bussines_address String   @db.Text
  bussines_status  String   @default("WAITING_VERIFIED")
  createdAt        DateTime @default(now())

  user Users @relation(fields: [userid], references: [userid], onDelete: Cascade)

  @@map("umkm")
}
